{
  "name": "anthropic-gemini-adapter",
  "version": "1.0.0",
  "description": "Cloudflare Worker to convert Anthropic API calls to Gemini API calls with MCP Tools and Function Call support",
  "main": "src/worker.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
